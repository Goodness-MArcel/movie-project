<%- include('partials/header.ejs') %>
<h3>popular movie</h3>
<div class="movieLayout">
    <div class="title">
        <h1><%= data.title %></h1>
        <strong>Genres:</strong> <small><%= data.genres.map(genre => genre.name).join(', ') %></small>
        <div class="intels">
          <span><%= new Date(data.release_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
           <span><%= data.vote_average %>⭐⭐⭐⭐</span> 
           <span> <%= data.runtime %> minutes</span>
        </div>
        <p><%= data.overview %></data>
       
        <strong>Vote Count:</strong> <%= data.vote_count %>
       
       
    </div>

    
    <div class="imgbox">
        <img src="https://image.tmdb.org/t/p/w500<%= data.poster_path %>"
         alt="<%= data.title %>">
    </div>
</div>




